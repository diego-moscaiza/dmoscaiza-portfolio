  });
</script>

<style>
  main {
    width: 600px;
    padding: 10px 20px;
    margin: 0 auto;
    margin-top: 10px;
    margin-bottom: 40px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    /* border: 1px solid #f0ff; */
  }

  /* About me */

  #about {
    display: flex;
    flex-direction: row;
    gap: 10px;
  }

  #about > .my-photo {
    width: 100px;
    height: 100px;
    border-radius: 50%;
  }

  #about .profesion {
    margin-bottom: 5px;
    color: #333;
  }

  .contact {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 10px;
    margin: 10px 0;
  }

  .contact > a {
    margin: 0 5px;
    padding: 5px 10px;
    border-radius: 20px;
    transition:
      background-color 0.3s ease,
      box-shadow 0.3s ease;
  }

  .contact > a:hover {
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.4);
  }

  .contact > .email {
    cursor: pointer;
    color: rgb(9, 124, 213);
    background-color: rgba(158, 216, 255, 0.7);
  }

  .contact > .email:hover {
    color: #f8f9fa;
    background-color: rgba(44, 151, 223);
  }

  .contact > .github {
    color: rgb(0, 0, 0);
    background-color: rgba(165, 165, 165, 0.7);
  }

  .contact > .github:hover {
    color: #f8f9fa;
    background-color: rgb(0, 0, 0);
  }

  .contact > .linkedin {
    color: rgb(11, 102, 194);
    background-color: rgba(171, 221, 255, 0.7);
  }

  .contact > .linkedin:hover {
    color: #f8f9fa;
    background-color: rgb(0, 118, 181);
  }

